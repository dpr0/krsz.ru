= form_for(@lens_item, html: { class: "form-horizontal"}) do |f|
  .row
    .col-sm-6
      = f.collection_select :lens_model, LensModel.all, :id, :name, include_blank: false, prompt: "Выберите объектив"
      -#= f.association :lens_model, label_method: lambda { |lens| "#{lens.brand} #{lens.name}" }, value_method: :id
  .row
    .col-sm-2
      = f.text_field :price, label: false, placeholder: 'Введите цену'
    .col-sm-1
      = f.text_field :used, label: 'Б/у'
    .col-sm-1
      = f.text_field :visible, label: 'Видимый'
    .col-sm-2.btn.btn-primary
      = f.file_field :image
  .row
    .col-sm-6
      = f.text_field :description, label: false
  .row
    .col-sm-6
      = f.text_field :used,
              collection: [[true, 'Б/у'], [false, 'Новый']],
              label_method: :last,
              value_method: :first,
              as: :radio_buttons,
              item_wrapper_class: 'radio-success',
              checked: true
  .row
    .col-sm-6
      = f.button :submit, class: 'btn btn-info'
      = link_to 'Отмена', lens_items_path, class: 'btn btn-danger'

.radio.radio-success
  %input#yes{name: "optionyes", type: "radio", value: "yes"}/
  %label{for: "yes"} Agree
  %input#no{checked: "checked", name: "optionyes", type: "radio", value: "no"}/
  %label{for: "no"} Disagree
