!!!
%html
  %head
    %title SONY
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    / BEGIN HEADER
    .header.navbar.navbar-inverse
      / BEGIN TOP NAVIGATION BAR
      .navbar-inner
        .header-seperation
          %ul.nav.pull-left.notifcation-center.visible-xs.visible-sm
            %li.dropdown
              %a{"data-webarch" => "toggle-left-side", :href => "#main-menu"}
                .iconset.top-menu-toggle-white
          / BEGIN LOGO
          = link_to image_tag("krsz.png", {height: "50", width: "160"}), root_path, class: 'logo'
          -#%a{:href => "index.html"}
          -#  %img.logo{:alt => "", "data-src" => "assets/img/logo.png", "data-src-retina" => "assets/img/logo2x.png", :height => "21", :src => "assets/img/logo.png", :width => "106"}/
          / END LOGO
          %ul.nav.pull-right.notifcation-center
            %li.dropdown.hidden-xs.hidden-sm
              %a.dropdown-toggle.active{"data-toggle" => "", :href => "index.html"}
                .iconset.top-home
            %li.dropdown.hidden-xs.hidden-sm
              %a.dropdown-toggle{:href => "email.html"}
                .iconset.top-messages
                %span.badge 2
            %li.dropdown.visible-xs.visible-sm
              %a{"data-webarch" => "toggle-right-side", :href => "#"}
                .iconset.top-chat-white
        / END RESPONSIVE MENU TOGGLER
        .header-quick-nav
          / BEGIN TOP NAVIGATION MENU
          .pull-left
            %ul.nav.quick-section
              %li.quicklinks
                %a#layout-condensed-toggle{:href => "#"}
                  .iconset.top-menu-toggle-dark
            %ul.nav.quick-section
              %li.quicklinks
                %a{:href => "#"}
                  .iconset.top-reload
              %li.quicklinks
                %span.h-seperate
              %li.quicklinks
                %a{:href => "#"}
                  .iconset.top-tiles
              %li.m-r-10.input-prepend.inside.search-form.no-boarder
                %span.add-on
                  %span.iconset.top-search
                %input.no-boarder{:name => "", :placeholder => "Search Dashboard", :style => "width:250px;", :type => "text"}/
          / END TOP NAVIGATION MENU
          / BEGIN CHAT TOGGLER
          .pull-right
            .chat-toggler
              %a#my-task-list.dropdown-toggle{"data-content" => "", "data-original-title" => "Notifications", "data-placement" => "bottom", "data-toggle" => "dropdown", :href => "#"}
                .user-details
                  .username
                    %span.badge.badge-important 3
                    John
                    %span.bold Smith
                .iconset.top-down-arrow
              #notification-list{:style => "display:none"}
                %div{:style => "width:300px"}
                  .notification-messages.info
                    .user-profile
                      %img{:alt => "", "data-src" => image_path('profiles/d2x.jpg'), "data-src-retina" => image_path('profiles/d2x.jpg'), :height => "35", :src => image_path('profiles/d.jpg'), :width => "35"}/
                    .message-wrapper
                      .heading
                        David Nester - Commented on your wall
                      .description
                        Meeting postponed to tomorrow
                      .date.pull-left
                        A min ago
                    .clearfix
                  .notification-messages.danger
                    .iconholder
                      %i.icon-warning-sign
                    .message-wrapper
                      .heading
                        Server load limited
                      .description
                        Database server has reached its daily capicity
                      .date.pull-left
                        2 mins ago
                    .clearfix
                  .notification-messages.success
                    .user-profile
                      %img{:alt => "", "data-src" => image_path('profiles/h.jpg'), "data-src-retina" => image_path('profiles/h2x.jpg'), :height => "35", :src => image_path('profiles/h.jpg'), :width => "35"}/
                    .message-wrapper
                      .heading
                        You haveve got 150 messages
                      .description
                        150 newly unread messages in your inbox
                      .date.pull-left
                        An hour ago
                    .clearfix
              .profile-pic
                %img{:alt => "", "data-src" => image_path('profiles/avatar_small.jpg'), "data-src-retina" => image_path('profiles/d.jpg'), :height => "35", :src => image_path('profiles/avatar_small.jpg'), :width => "35"}/
            %ul.nav.quick-section
              %li.quicklinks
                %a#user-options.dropdown-toggle.pull-right{"data-toggle" => "dropdown", :href => "#"}
                  .iconset.top-settings-dark
                %ul.dropdown-menu.pull-right{"aria-labelledby" => "user-options", :role => "menu"}
                  %li
                    %a{:href => "user-profile.html"} My Account
                  %li
                    %a{:href => "calender.html"} My Calendar
                  %li
                    %a{:href => "email.html"}
                      My Inbox  
                      %span.badge.badge-important.animated.bounceIn 2
                  %li.divider
                  %li
                    %a{:href => "login.html"}
                      %i.fa.fa-power-off>
                      \  Log Out
              %li.quicklinks
                %span.h-seperate
              %li.quicklinks
                %a.chat-menu-toggle{"data-webarch" => "toggle-right-side", :href => "#"}
                  .iconset.top-chat-dark
                    %span.badge.badge-important.hide 1
                .simple-chat-popup.chat-menu-toggle.hide
                  .simple-chat-popup-arrow
                  .simple-chat-popup-inner
                    %div{:style => "width:100px"}
                      .semi-bold David Nester
                      .message Hey you there
          / END CHAT TOGGLER
        / END TOP NAVIGATION MENU
      / END TOP NAVIGATION BAR
    / END HEADER
    / END HEADER
    / BEGIN CONTAINER
    .page-container.row-fluid
      / BEGIN SIDEBAR
      / BEGIN MENU
      #main-menu.page-sidebar
        #main-menu-wrapper.page-sidebar-wrapper.scrollbar-dynamic
          / BEGIN MINI-PROFILE
          .user-info-wrapper
            .profile-wrapper
              %img{:alt => "", "data-src" => image_path('profiles/avatar.jpg'), "data-src-retina" => image_path('profiles/avatar2x.jpg'), :height => "69", :src => image_path('profiles/avatar.jpg'), :width => "69"}/
            .user-info
              .greeting Welcome
              .username
                John
                %span.semi-bold Smith
              .status
                Status
                %a{:href => "#"}
                  .status-icon.green>
                  Online
          / END MINI-PROFILE
          / BEGIN SIDEBAR MENU
          %p.menu-title
            BROWSE
            %span.pull-right
              %a{:href => "javascript:;"}
                %i.fa.fa-refresh
          %ul
            / BEGIN SELECTED LINK
            %li.start.active
              %a{:href => "#"}
                %i.icon-custom-home
                %span.title Link 1
                %span.selected
                %span.badge.badge-important.pull-right 5
            / END SELECTED LINK
            / BEGIN BADGE LINK
            %li
              %a{:href => "#"}
                %i.fa.fa-envelope
                %span.title Link 2
                %span.badge.badge-disable.pull-right 203
            / END BADGE LINK
            / BEGIN SINGLE LINK
            %li
              %a{:href => "#"}
                %i.fa.fa-flag
                %span.title Link 3
            / END SINGLE LINK
            / BEGIN ONE LEVEL MENU
            %li
              %a{:href => "javascript:;"}
                %i.icon-custom-ui
                %span.title Link 4
                %span.arrow
              %ul.sub-menu
                %li
                  %a{:href => "#"} Sub Link 1
            / END ONE LEVEL MENU
            / BEGIN TWO LEVEL MENU
            %li
              %a{:href => "javascript:;"}
                %i.fa.fa-folder-open
                %span.title Link 5
                %span.arrow
              %ul.sub-menu
                %li
                  %a{:href => "javascript:;"} Sub Link 1
                %li
                  %a{:href => "javascript:;"}
                    %span.title Sub Link 2
                    %span.arrow
                  %ul.sub-menu
                    %li
                      %a{:href => "javascript:;"} Sub Link 1
            / END TWO LEVEL MENU
          / END SIDEBAR MENU
          / BEGIN SIDEBAR WIDGETS
          .side-bar-widgets
            / BEGIN FOLDER WIDGET
            %p.menu-title
              FOLDER
              %span.pull-right
                %a.create-folder{:href => "#"}
                  %i.icon-plus
            %ul.folders
              %li
                %a{:href => "#"}
                  .status-icon.green>
                  Task 1
              / BEGIN HIDDEN INPUT BOX (FOR ADD FOLDER LINK)
              %li.folder-input{:style => "display:none"}
                %input#folder-name.no-boarder.folder-name{:name => "", :placeholder => "Name of folder", :type => "text"}/
              / END HIDDEN INPUT BOX (FOR ADD FOLDER LINK)
            / END FOLDER WIDGET
            / BEGIN PROJECTS WIDGET
            %p.menu-title PROJECTS
            / BEGIN EXAMPLE 1
            .status-widget
              .status-widget-wrapper
                .title
                  Project Title
                  %a.remove-widget{:href => "#"}
                    %i.icon-custom-cross
                %p Project Description
            / END EXAMPLE 1
            / END PROJECTS WIDGET
          .clearfix
          / END SIDEBAR WIDGETS
      / BEGIN SCROLL UP HOVER
      %a.scrollup{:href => "#"} Scroll
      / END SCROLL UP HOVER
      / END MENU
      / BEGIN SIDEBAR FOOTER WIDGET
      .footer-widget
        .progress.transparent.progress-small.no-radius.no-margin
          .progress-bar.progress-bar-success.animate-progress-bar{"data-percentage" => "79%"}
        .pull-right
          .details-status
            %span.animate-number{"data-animation-duration" => "560", "data-value" => "86"}>
            \%
          %a{:href => "#"}
            %i.fa.fa-power-off
      / END SIDEBAR FOOTER WIDGET
      / END SIDEBAR
      / BEGIN PAGE CONTAINER
      .page-content
        .content
          = yield
      / BEGIN CHAT
      .chat-window-wrapper
        #main-chat-wrapper.inner-content
          #chat-users.chat-window-wrapper.scroller.scrollbar-dynamic
            / BEGIN CHAT HEADER
            .chat-header
              / BEGIN CHAT SEARCH BAR
              .pull-left
                %input{:placeholder => "search", :type => "text"}/
              / END CHAT SEARCH BAR
              / BEGIN CHAT QUICKLINKS
              .pull-right
                %a{:href => "#"}
                  .iconset.top-settings-dark
              / END CHAT QUICKLINKS
            / END CHAT HEADER
            / BEGIN GROUP WIDGET
            .side-widget
              .side-widget-title group chats
              .side-widget-content
                #groups-list
                  %ul.groups
                    %li
                      %a{:href => "#"}
                        .status-icon.green>
                        Group Chat 1
            / END GROUP WIDGET
            / BEGIN FAVORITES WIDGET
            .side-widget
              .side-widget-title favorites
              .side-widget-content
                / BEGIN SAMPLE CHAT
                .user-details-wrapper.active{"data-chat-status" => "online", "data-chat-user-pic" => image_path('profiles/d.jpg'), "data-chat-user-pic-retina" => image_path('profiles/d2x.jpg'), "data-user-name" => "Jane Smith"}
                  / BEGIN PROFILE PIC
                  .user-profile
                    %img{:alt => "", "data-src" => image_path('profiles/d.jpg'), "data-src-retina" => image_path('profiles/d2x.jpg'), :height => "35", :src => image_path('profiles/d.jpg'), :width => "35"}/
                  / END PROFILE PIC
                  / BEGIN MESSAGE
                  .user-details
                    .user-name Jane Smith
                    .user-more Message...
                  / END MESSAGE
                  / BEGIN MESSAGES BADGE
                  .user-details-status-wrapper
                    %span.badge.badge-important 3
                  / END MESSAGES BADGE
                  / BEGIN STATUS
                  .user-details-count-wrapper
                    .status-icon.green
                  / END STATUS
                  .clearfix
                / END SAMPLE CHAT
            / END FAVORITES WIDGET
            / BEGIN MORE FRIENDS WIDGET
            .side-widget
              .side-widget-title more friends
              #friends-list.side-widget-content
                / BEGIN SAMPLE CHAT
                .user-details-wrapper{"data-chat-status" => "online", "data-chat-user-pic" => image_path('profiles/d.jpg'), "data-chat-user-pic-retina" => image_path('profiles/d2x.jpg'), "data-user-name" => "Jane Smith"}
                  / BEGIN PROFILE PIC
                  .user-profile
                    %img{:alt => "", "data-src" => image_path('profiles/d.jpg'), "data-src-retina" => image_path('profiles/d2x.jpg'), :height => "35", :src => image_path('profiles/d.jpg'), :width => "35"}/
                  / END PROFILE PIC
                  / BEGIN MESSAGE
                  .user-details
                    .user-name Jane Smith
                    .user-more Message...
                  / END MESSAGE
                  / BEGIN MESSAGES BADGE
                  .user-details-status-wrapper
                    %span.badge.badge-important 3
                  / END MESSAGES BADGE
                  / BEGIN STATUS
                  .user-details-count-wrapper
                    .status-icon.green
                  / END STATUS
                  .clearfix
                / END SAMPLE CHAT
            / END MORE FRIENDS WIDGET
          / BEGIN DUMMY CHAT CONVERSATION
          #messages-wrapper.chat-window-wrapper{:style => "display:none"}
            / BEGIN CHAT HEADER BAR
            .chat-header
              / BEGIN SEARCH BAR
              .pull-left
                %input{:placeholder => "search", :type => "text"}/
              / END SEARCH BAR
              / BEGIN CLOSE TOGGLE
              .pull-right
                %a{:href => "#"}
                  .iconset.top-settings-dark
              / END CLOSE TOGGLE
            .clearfix
            / END CHAT HEADER BAR
            / BEGIN CHAT BODY
            .chat-messages-header
              .status.online
              %span.semi-bold Jane Smith(Typing..)
              %a.chat-back{:href => "#"}
                %i.icon-custom-cross
            / BEGIN CHAT MESSAGES CONTAINER
            .chat-messages.scrollbar-dynamic.clearfix
              / BEGIN TIME STAMP EXAMPLE
              .sent_time Yesterday 11:25pm
              / END TIME STAMP EXAMPLE
              / BEGIN EXAMPLE CHAT MESSAGE
              .user-details-wrapper
                / BEGIN MESSENGER PROFILE
                .user-profile
                  %img{:alt => "", "data-src" => image_path('profiles/d.jpg'), "data-src-retina" => image_path('profiles/d2x.jpg'), :height => "35", :src => image_path('profiles/d.jpg'), :width => "35"}/
                / END MESSENGER PROFILE
                / BEGIN MESSENGER MESSAGE
                .user-details
                  .bubble Hello, You there?
                / END MESSENGER MESSAGE
                .clearfix
                / BEGIN TIMESTAMP ON CLICK TOGGLE
                .sent_time.off Yesterday 11:25pm
                / END TIMESTAMP ON CLICK TOGGLE
              / END EXAMPLE CHAT MESSAGE
              / BEGIN TIME STAMP EXAMPLE
              .sent_time Today 11:25pm
              / BEGIN TIME STAMP EXAMPLE
              / BEGIN EXAMPLE CHAT MESSAGE (FROM SELF)
              .user-details-wrapper.pull-right
                / BEGIN MESSENGER MESSAGE
                .user-details
                  .bubble.sender Let me know when you free
                / END MESSENGER MESSAGE
                .clearfix
                / BEGIN TIMESTAMP ON CLICK TOGGLE
                .sent_time.off Sent On Tue, 2:45pm
                / END TIMESTAMP ON CLICK TOGGLE
              / END EXAMPLE CHAT MESSAGE (FROM SELF)
            / END CHAT MESSAGES CONTAINER
          .chat-input-wrapper{:style => "display:none"}
            %textarea#chat-message-input{:placeholder => "Type your message", :rows => "1"}
          .clearfix
          / END DUMMY CHAT CONVERSATION
      / END CHAT
    = javascript_include_tag 'application', 'data-turbolinks-track' => true