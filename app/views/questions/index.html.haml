%h1 Список тем

%table
  %tbody
    - @questions.each do |question|
      %tr
        %td= link_to question.title, question


.col-md-12
  .grid.simple{:style => "position: static; zoom: 1;"}
    .grid-title.no-border
      %h4
        Table
        %span.semi-bold Styles
      .tools
        %a.collapse{:href => "javascript:;"}
        %a.config{"data-toggle" => "modal", :href => "#grid-config"}
        %a.reload{:href => "javascript:;"}
        %a.remove{:href => "javascript:;"}
    .grid-body.no-border{:style => "overflow: hidden; display: block;"}
      %h3
        Basic
        %span.semi-bold Table
      %table.table.no-more-tables
        %thead
          %tr
            %th{:style => "width:1%"}
              .checkbox.check-default
                %input#checkbox10.checkall{:type => "checkbox", :value => "1"}/
                %label{:for => "checkbox10"}
            %th{:style => "width:9%"} Project Name
            %th{:style => "width:22%"} Description
            %th{:style => "width:6%"} Price
            %th{:style => "width:10%"} Progress
        %tbody
          %tr
            %td.v-align-middle
              .checkbox.check-default
                %input#checkbox11{:type => "checkbox", :value => "1"}/
                %label{:for => "checkbox11"}
            %td.v-align-middle Early Bird
            %td.v-align-middle
              %span.muted Redesign project template
            %td
              %span.muted $4,500
            %td.v-align-middle
              .progress
                .progress-bar.progress-bar-success.animate-progress-bar{"data-percentage" => "79%", :style => "width: 79%;"}
          %tr
            %td
              .checkbox.check-default
                %input#checkbox12{:type => "checkbox", :value => "1"}/
                %label{:for => "checkbox12"}
            %td
              .inline Angry Birds
              %span.label.label-important ALERT!
            %td
              %span.muted Something goes here
            %td
              %span.muted $9,000
            %td
              .progress
                .progress-bar.progress-bar-danger.animate-progress-bar{"data-percentage" => "10%", :style => "width: 10%;"}
          %tr
            %td
              .checkbox.check-default
                %input#checkbox13{:type => "checkbox", :value => "1"}/
                %label{:for => "checkbox13"}
            %td PHP Login page
            %td.v-align-middle
              %span.muted A project in business and science is typically defined
            %td
              %span.muted $5,400
            %td
              .progress
                .progress-bar.progress-bar-info.animate-progress-bar{"data-percentage" => "65%", :style => "width: 65%;"}
          %tr
            %td
              .checkbox.check-default
                %input#checkbox14{:type => "checkbox", :value => "1"}/
                %label{:for => "checkbox14"}
            %td Zombies
            %td.v-align-middle
              %span.muted frequently involving research or design
            %td
              %span.muted $6,000
            %td
              .progress
                .progress-bar.progress-bar-warning.animate-progress-bar{"data-percentage" => "42%", :style => "width: 42%;"}