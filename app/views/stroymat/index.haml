.row
  .col-md-12.m-b-10
    .widget-item{:style => "zoom: 1;"}
      .controller.overlay.right
        %a.reload{:href => "javascript:;"}
        %a.remove{:href => "javascript:;"}
      .tiles.green.overflow-hidden.full-height{:style => "max-height:214px"}
        .overlayer.bottom-right.fullwidth
          .overlayer-wrapper
            .tiles.gradient-black.p-l-20.p-r-20.p-b-20.p-t-20
              .pull-right
                %a.hashtags.transparent{:href => "#"} #Art Design
              .clearfix
          -#%img.lazy.hover-effect-img{:alt => "", :src => "cover_pic.png"}/
        = image_tag "drova2.png", size: "300x300"
      .tiles.white
        .tiles-body
          .row
            .user-profile-pic.text-left
              -#%img{:alt => "", "data-src" => "assets/img/profiles/avatar.jpg", "data-src-retina" => "assets/img/profiles/avatar2x.jpg", :height => "69", :src => "assets/img/profiles/avatar2x.jpg", :width => "69"}/
              .pull-right.m-r-20.m-t-35
                %span.bold.text-black.small-text Дрова
            .col-md-5.no-padding
              - if current_user
                .user-comment-wrapper
                  .comment
                    .user-name.text-black.bold
                      = current_user.firstname
                      %span.semi-bold
                        = current_user.lastname
                    .preview-wrapper @ krsz.ru
                  .clearfix
            .col-md-7.no-padding
              .clearfix
              .m-r-20.m-t-20.m-b-10.m-l-10
                %p.p-b-10
                  = image_tag "drova1.png", size: "300x300"
                %a.hashtags.m-b-5{:href => "#"} #Дрова
                %a.hashtags.m-b-5{:href => "#"} #Стройматериалы
